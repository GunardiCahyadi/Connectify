<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Profile</title>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .card {
            background-color: #fff;
            border: none;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .card-title {
            color: #f44336;
            margin-bottom: 0;
        }
        .card-text {
            color: #333;
        }
        .heart-icon {
            color: #ff4081;
            margin-right: 5px;
        }
        button {
            background-color: #ff4081;
            border: none;
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
        button a {
            color: #fff;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <%-include('navbar') %>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="<%= profile.photoURL %>" class="card-img-top" alt="Profile Photo">
                    <div class="card-body">
                        <h5 class="card-title"><%= profile.name %></h5>
                        <p class="card-text"><%= profile.bio %></p>
                        <p class="card-text"><strong>Date of Birth:</strong> <%= profile.formatDate %></p>
                        <button class="btn btn-primary"><a href="/profile/edit" class="text-white">Edit</a></button>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <% profile.Posts.forEach(el => { %>
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><%= el.content %></h5>
                            <img src="<%= el.imageURL %>" class="img-fluid mb-2" alt="Profile Photo">
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="/posts/<%= el.id %>/likes"><span class="heart-icon">❤️</span> <%= el.likes %> likes</a>
                                <button class="btn btn-danger btn-sm"><a href="/posts/<%= el.id %>/delete" class="text-white">Delete</a></button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
